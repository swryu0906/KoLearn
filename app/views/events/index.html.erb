<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Start time</th>
      <th>End time</th>
      <th>Course</th>
      <th>Number of Joins</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.start_time %></td>
        <td><%= event.end_time %></td>
        <td><%= event.course.name %></td>
        <td><%= event.counter %></td>
        <td><%= link_to 'Show', course_event_path(@course, event) %></td>
        <td><%= link_to 'Edit', edit_course_event_path(@course, event) %></td>
        <td><%= link_to 'Destroy', [@course, event], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

